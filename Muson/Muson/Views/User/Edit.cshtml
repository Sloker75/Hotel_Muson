@using Domain.Models.ViewModels
@model UserViewModel


<section>
    <div class="container-fluid">
        <div class="text-center">
            <p style="font-size: 25px;">Редагування користувача</p>
            <p style="font-size: 16px; color: #858484;" class="mt-3">Будь ласка, введіть свої дані, щоб змінити їх</p>

        <form method="post" asp-action="Edit" enctype="multipart/form-data">
            <div style="width: 615px; margin: auto; display: block;" class="row">
                <div class="col-12">
                    <p class="text-lg-start" style="color: #818181; font-size: 16px;">Контактна інформація</p>
                    <input style="height: 50px;" type="text" asp-for="PhoneNumber" class="form-control rounded-pill mt-3" placeholder="@Model.PhoneNumber">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div style="width: 615px; margin: auto; display: block;" class="row">
                <div class="col-12">
                    <input type="email" style="height: 50px;" asp-for="Email" class="form-control rounded-pill mt-3" placeholder="@Model.Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <p class="text-lg-start mt-3" style="color: #818181; font-size: 16px;">Особиста информація</p>
                </div>
            </div>

            <div style="width: 615px; margin: auto;" class="row">
                <div class="col-sm-6">
                    <input style="height: 50px;" type="text" asp-for="Name" class="form-control rounded-pill mt-1" placeholder="@Model.Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <input style="height: 50px;" type="text" asp-for="Surname" class="form-control rounded-pill mt-1" placeholder="@Model.Surname">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>
            <div style="width: 615px; margin: auto; display: block;" class="row">
                <div class="col-12">
                    <input type="datetime-local" style="height: 50px;" asp-for="BirthDate" class="form-control rounded-pill mt-3" placeholder="@Model.BirthDate">
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>
            @if (!User.IsInRole("User")){
                <div style="width: 615px; margin: auto; display: block;" class="row">
                    <div class="col-12">
                        <input type="text" style="height: 50px;" asp-for="Employee.Salary" class="form-control rounded-pill mt-3" placeholder="@Model.Employee.Salary">
                        <span asp-validation-for="Employee.Salary" class="text-danger"></span>
                    </div>
                </div>

                <div style="width: 615px; margin: auto; display: block;" class="row">
                    <div class="col-12">
                        <p class="text-lg-start mt-3" style="color: #818181; font-size: 16px;">Адресна інформація</p>
                        <input style="height: 50px;" type="text" asp-for="Employee.Address.Country" class="form-control rounded-pill mt-3" placeholder="@Model.Employee.Address.Country">
                        <span asp-validation-for="Employee.Address.Country" class="text-danger"></span>
                    </div>
                </div>

                <div style="width: 615px; margin: auto; display: block;" class="row">
                    <div class="col-12">
                        <input style="height: 50px;" type="text" asp-for="Employee.Address.City" class="form-control rounded-pill mt-3" placeholder="@Model.Employee.Address.City">
                        <span asp-validation-for="Employee.Address.City" class="text-danger"></span>
                    </div>
                </div>

                <div style="width: 615px; margin: auto; display: block;" class="row">
                    <div class="col-12">
                        <input style="height: 50px;" type="text" asp-for="Employee.Address.Street" class="form-control rounded-pill mt-3" placeholder="@Model.Employee.Address.Street">
                        <span asp-validation-for="Employee.Address.Street" class="text-danger"></span>
                    </div>
                </div>
            }
            <input type="hidden" asp-for="Email" />
            <button style="width: 615px; background-color: #CBBAA9; font-size: 18px; color: #fff;" class="btn btn-lg mt-4 rounded-pill" type="submit">Змінити дані</button>
        </form>
        </div>
    </div>
</section>


