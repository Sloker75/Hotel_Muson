@using Domain.Enum
@using Domain.Models.ViewModels
@model RoomViewModel
    <section>
        <div class="container-fluid">
            <div class="text-center">
                <p style="font-size: 25px; font-family: 'Ubuntu'; font-style: normal; font-weight: 500;" class="mt-1">Видалення кімнати</p>
                <p style="font-size: 16px; color: #858484; font-family: 'Inter'; font-style: normal; font-weight: 500;" class="mt-3">Ви дійсно хочете видалити цю кімнату?</p>
            
            <form method="post" asp-action="Delete" enctype="multipart/form-data">
            <div style="width: 615px; margin: auto; display: block;" class="row">
                <div class="col-12">
                    <p class="text-lg-start" style="color: #818181; font-size: 16px;">Заповніть інформацію</p>
                    <input style="height: 50px;" asp-for="TypeRoom" class="form-control rounded-pill mt-3" placeholder="TypeRoom" readonly>
                    <span asp-validation-for="TypeRoom" class="text-danger"></span>
                </div>
            </div>
            <div style="width: 615px; margin: auto; display: block;" class="row">
                <div class="col-12">
                    <input style="height: 50px;" asp-for="Status" class="form-control rounded-pill mt-3" placeholder="Status" readonly>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>

            <div style="width: 615px; margin: auto;" class="row mt-3">
                <div class="col-sm-6">
                    <input style="height: 50px;" asp-for="RoomNumber" class="form-control rounded-pill mt-1" readonly placeholder="Введіть номер кімнати">
                    <span asp-validation-for="RoomNumber" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <input style="height: 50px;" type="text" asp-for="CountRoom" class="form-control rounded-pill mt-1" readonly placeholder="Введіть кількість кімнат у номері">
                    <span asp-validation-for="CountRoom" class="text-danger"></span>
                </div>
            </div>
            <div style="width: 615px; margin: auto; display: block;" class="row">
                <div class="col-12">
                    <input style="height: 50px;" asp-for="Floor" class="form-control rounded-pill mt-3" readonly placeholder="Введіть номер поверху кімнати">
                    <span asp-validation-for="Floor" class="text-danger"></span>
                </div>
            </div>
            <div style="width: 615px; margin: auto; display: block;" class="row">
                <div class="col-12">
                    <input style="height: 50px;" asp-for="Price" class="form-control rounded-pill mt-3" readonly placeholder="Введіть віртість номеру">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div style="width: 615px; margin: auto; display: block;" class="row">
                <div class="col-12">
                    <input type="text" style="height: 50px;" asp-for="ShortDescription" class="form-control rounded-pill mt-3" readonly placeholder="Введіть короткий опис про кімнату">
                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                </div>
            </div>
            <div style="width: 615px; margin: auto; display: block;" class="row">
                <div class="col-12">
                    <textarea rows="5" cols="50" type="text" style="border-radius: 10px;" asp-for="LongDescription" class="form-control mt-3" readonly placeholder="Введіть повний опис про кімнату"></textarea>
                    <span asp-validation-for="LongDescription" class="text-danger"></span>
                </div>
            </div>
        </form>
        <form action="Delete" method="post">
            <input type="hidden" asp-for="RoomId" />
            <button style="width: 615px; background-color: #CBBAA9; font-size: 18px; color: #fff;" class="btn btn-lg mt-4 rounded-pill" type="submit">Видалити</button>
        </form>
            </div>
        </div>
    </section>