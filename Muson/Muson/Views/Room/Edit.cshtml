@using Domain.Enum
@using Domain.Models.ViewModels
@model RoomViewModel

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="RoomNumber">Room Number</label>
        <input asp-for="RoomNumber" class="form-control" placeholder="Title">
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CountRoom">Count Room</label>
        <input asp-for="CountRoom" class="form-control" placeholder="Description">
        <span asp-validation-for="CountRoom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Floor">Floor</label>
        <input asp-for="Floor" class="form-control" placeholder="Description">
        <span asp-validation-for="Floor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TypeRoom">Type Room</label>
        <select asp-for="TypeRoom" asp-items="@Html.GetEnumSelectList<TypeRoom>()" class="form-control">
            <option selected="selected" value="">--Select--</option>
        </select>
        <span asp-validation-for="TypeRoom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status">Status</label>
        <select asp-for="Status" asp-items="@Html.GetEnumSelectList<RoomStatus>()" class="form-control">
            <option selected="selected" value="">--Select--</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="RoomId" />
    <input type="submit" value="Submit" class="btn btn-primary" />
</form>
