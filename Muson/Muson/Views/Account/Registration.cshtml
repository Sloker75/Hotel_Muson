@using Domain.Models.ViewModels
@model UserRegistrationViewModel

<section>
    <div class="container-fluid">
        <div class="text-center">
            <p style="font-size: 35px;">З поверненням</p>
            <p style="font-size: 25px;" class="mt-3">Зареєструватися</p>
            <p style="font-size: 16px; color: #858484;" class="mt-3">Будь ласка, введіть свої дані, щоб зареєструватися</p>

        <form method="post" asp-action="Registration" enctype="multipart/form-data">
            <div style="width: 615px; margin: auto; display: block;" class="row">
                <div class="col-12">
                    <p class="text-lg-start" style="color: #818181; font-size: 16px;">Заповніть інформацію</p>
                    <input style="height: 50px;" type="text" asp-for="PhoneNumber" class="form-control rounded-pill mt-3" placeholder="Номер телефона">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div style="width: 615px; margin: auto; display: block;" class="row">
                <div class="col-12">
                    <input type="email" style="height: 50px;" asp-for="Email" class="form-control rounded-pill mt-3" placeholder="Електронна адреса">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <p class="text-lg-start mt-3" style="color: #818181; font-size: 16px;">Введіть особисту информацію</p>
                </div>
            </div>

            <div style="width: 615px; margin: auto;" class="row">
                <div class="col-sm-6">
                    <input style="height: 50px;" type="text" asp-for="Name" class="form-control rounded-pill mt-1" placeholder="Ім'я">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <input style="height: 50px;" type="text" asp-for="Surname" class="form-control rounded-pill mt-1" placeholder="Прізвище">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>
            <div style="width: 615px; margin: auto; display: block;" class="row">
                <div class="col-12">
                    <input type="datetime-local" style="height: 50px;" asp-for="BirthDate" class="form-control rounded-pill mt-3" placeholder="Дата народження">
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>
            <div style="width: 615px; margin: auto; display: block;" class="row">
                <div class="col-12">
                    <p class="text-lg-start mt-3" style="color: #818181; font-size: 16px;">Придумайте пароль</p>
                    <input style="height: 50px;" type="password" asp-for="Password" class="form-control rounded-pill mt-2" placeholder="Пароль">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div style="width: 615px; margin: auto; display: block;" class="row">
                <div class="col-12">
                    <input style="height: 50px;" type="password" asp-for="ConfirmPassword" class="form-control rounded-pill mt-3" placeholder="Повторіть пароль">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <button style="width: 615px; background-color: #CBBAA9; font-size: 18px; color: #fff;" class="btn btn-lg mt-4 rounded-pill" type="submit">Зареєструватись</button>
            <p style="font-size: 16px; color: #CBBAA9;" class="mt-3">Вже є обліковий запис? Авторизуватися</p>
        </form>
        </div>
    </div>
</section>
