@using Domain.Models.ViewModels
@model UserLoginViewModel
<section>
    <div class="container-fluid">
        <div class="text-center">
            <p style="font-size: 35px;">З поверненням</p>
            <p style="font-size: 25px;" class="mt-3">Увійти</p>
            <p style="font-size: 16px; color: #858484;" class="mt-3">Будь ласка, введіть свої дані, щоб увійти</p>
            <form method="post" asp-action="Login" enctype="multipart/form-data">
                <div style="width: 415px; margin: auto; display: block;">
                    <input style="height: 50px;" asp-for="Email" class="form-control rounded-pill mt-3" placeholder="Електронна адреса">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div style="width: 415px; margin: auto; display: block;">
                    <input style="height: 50px;" asp-for="Password" class="form-control rounded-pill mt-3" placeholder="Пароль">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div style="width: 580px; margin: auto;" class="row mt-3">
                    <div class="col-6">
                        <div>
                            <input class="form-check-input rounded-pill ms-5" type="checkbox" id="disabledFieldsetCheck">
                            <label class="form-check-label" for="disabledFieldsetCheck"> За пам'ятати мене</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <p style="color: #64876F; font-size: 15px;">Забули пароль?</p>
                    </div>
                    <div class="col-6"></div>
                </div>
                <button style="width: 415px; background-color: #CBBAA9;" class="btn btn-lg btn-primary mt-3 rounded-pill" type="submit">Увійти</button>
            </form>
            <p style="font-size: 16px; color: #858484;" class="mt-3">Немає облікового запису? <a>Зареєструватися</a></p>
        </div>
        
    </div>
</section>